{
  "extends": ["airbnb/base"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "document": false
  },
  "parserOptions": {
   "ecmaVersion":"latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "always"],
    "no-use-before-define": ["error", {"functions": false, "classes": false}]
  }

}
